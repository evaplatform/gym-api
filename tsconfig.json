{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/shared/*",
        "src/models/*",
        "src/repositories/*",
        "src/services/*",
        "src/*"
      ],
      "src/*": ["src/*"],
      "src/shared/*": ["src/shared/*"],
      "src/models/*": ["src/models/*"],
      "src/repositories/*": ["src/repositories/*"],
      "src/services/*": ["src/services/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/shared/**/*.ts",
    "src/models/**/*.ts" ,
    "src/repositories/**/*.ts",
    "src/services/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}