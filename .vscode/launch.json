{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Program (ts-node)",
        "type": "node",
        "request": "launch",
        "runtimeArgs": [
          "-r",
          "ts-node/register"
        ],
        "args": ["${workspaceFolder}/src/index.ts"],
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }